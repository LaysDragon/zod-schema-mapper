{
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Run current .ts with ts-node",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "runtimeExecutable": "node",
      "program": "${file}",
      "runtimeArgs": [
        "--experimental-specifier-resolution=node",
        "--loader",
        "ts-node/esm"
      ],
      "console": "integratedTerminal"
    }
  ]
}